{
  "name": "agents-workflow-mcp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "npm run copy:static && npm run build:embeddings",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:embeddings": "tsx scripts/build-embeddings.ts",
